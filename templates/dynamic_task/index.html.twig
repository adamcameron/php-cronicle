{% extends 'base.html.twig' %}

{% block title %}Dynamic Task Messages{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="mb-4">Dynamic Task Messages</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Type</th>
                    <th>Name</th>
                    <th>Schedule</th>
                    <th>Working Days</th>
                    <th>Timezone</th>
                    <th>Priority</th>
                    <th>Active</th>
                    <th>Metadata</th>
                    <th>Last Executed (UTC)</th>
                    <th>Execution Time (ms)</th>
                    <th>Last Result</th>
                    <th>Next Scheduled (UTC)</th>
                    <th>Failure Count</th>
                    <th colspan="2">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for task in tasks %}
                <tr>
                    <td>{{ task.id }}</td>
                    <td>
                        <code class="text-primary">{{ task.type }}</code>
                    </td>
                    <td>
                        <strong>{{ task.name }}</strong>
                    </td>
                    <td>
                        <code class="text-success">{{ task.schedule }}</code>
                    </td>
                    <td>
                        {% if task.workingDaysOnly %}
                            <span class="badge bg-warning text-dark">Yes</span>
                        {% else %}
                            <span class="text-muted">-</span>
                        {% endif %}
                    </td>
                    <td>
                        <span class="badge bg-info">{{ task.timezone.value }}</span>
                    </td>
                    <td>
                        <span class="badge bg-secondary">{{ task.priority }}</span>
                    </td>
                    <td>
                        {% if task.active %}
                            <span class="badge bg-success">Active</span>
                        {% else %}
                            <span class="badge bg-danger">Inactive</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if task.metadata %}
                            <div class="metadata-list">
                                {% for key, value in task.metadata %}
                                    <div class="metadata-item">
                                        <strong>{{ key }}:</strong>
                                        {% if value is iterable %}
                                            {% if value is not mapping %}
                                                <span class="text-info">[{{ value|join(', ') }}]</span>
                                            {% else %}
                                                <span class="text-warning">{object}</span>
                                            {% endif %}
                                        {% elseif value is same as(true) %}
                                            <span class="text-success">true</span>
                                        {% elseif value is same as(false) %}
                                            <span class="text-danger">false</span>
                                        {% else %}
                                            <span class="text-dark">{{ value }}</span>
                                        {% endif %}
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <span class="text-muted">No metadata</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if task.execution and task.execution.executedAt %}
                            <small>{{ task.execution.executedAt|date('Y-m-d H:i:s') }}</small>
                        {% else %}
                            <span class="text-muted">Never</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if task.execution and task.execution.executionTime is not null %}
                            <span class="text-info">{{ task.execution.executionTime }}ms</span>
                        {% else %}
                            <span class="text-muted">-</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if task.execution and task.execution.lastResult %}
                            <div class="result-preview" title="{{ task.execution.lastResult }}">
                                {{ task.execution.lastResult|length > 50 ? task.execution.lastResult|slice(0, 50) ~ '...' : task.execution.lastResult }}
                            </div>
                        {% else %}
                            <span class="text-muted">-</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if task.execution and task.execution.nextScheduledAt %}
                            <small>{{ task.execution.nextScheduledAt|date('Y-m-d H:i:s') }}</small>
                        {% else %}
                            <span class="text-muted">-</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if task.execution and task.execution.failureCount %}
                            <div class="result-preview" title="{{ task.execution.failureCount }}">
                                {{ task.execution.failureCount }}
                            </div>
                        {% else %}
                            <span class="text-muted">-</span>
                        {% endif %}
                    </td>
                    <td>
                        <div class="btn-group-vertical btn-group-sm">
                            <a href="{{ path('dynamic_task_edit', {id: task.id}) }}" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a href="{{ path('dynamic_task_run', {id: task.id}) }}" class="btn btn-outline-success btn-sm">
                                <i class="fas fa-play"></i> Run Now
                            </a>
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="13" class="text-center text-muted">
                        <p class="my-4">No tasks found.</p>
                        <a href="{{ path('dynamic_task_new') }}" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Create First Task
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-4">
        <a href="{{ path('dynamic_task_new') }}" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Task
        </a>
    </div>
</div>

<style>
    .metadata-list {
        font-size: 0.85em;
        max-width: 250px;
    }

    .metadata-item {
        margin-bottom: 2px;
        padding: 1px 4px;
        background-color: #f8f9fa;
        border-radius: 3px;
        border-left: 2px solid #dee2e6;
    }

    .result-preview {
        font-size: 0.85em;
        max-width: 200px;
        word-break: break-word;
        cursor: help;
    }

    code {
        font-size: 0.85em;
    }

    .table th {
        white-space: nowrap;
        font-size: 0.9em;
    }

    .table td {
        vertical-align: middle;
        font-size: 0.9em;
    }
</style>
{% endblock %}
