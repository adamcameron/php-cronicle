{% extends 'base.html.twig' %}

{% block title %}
    {% if task.id %}Edit Task{% else %}Create New Task{% endif %} - Dynamic Tasks
{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-tasks"></i>
                        {% if task.id %}
                            Edit Task: {{ task.name }}
                        {% else %}
                            Create New Task
                        {% endif %}
                    </h4>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.type, 'Task Type', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.type, {'attr': {'class': 'form-control', 'placeholder': 'e.g. sales_report'}}) }}
                                {{ form_errors(form.type) }}
                                <div class="form-text">The class identifier for this task</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.name, 'Task Name', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'e.g. Weekly Sales Report'}}) }}
                                {{ form_errors(form.name) }}
                                <div class="form-text">Human-readable name for the task</div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.schedule, 'Schedule', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.schedule, {'attr': {'class': 'form-control', 'placeholder': 'e.g. 0 9 * * 1-5 or @daily'}}) }}
                                {{ form_errors(form.schedule) }}
                                <div class="form-text">Cron expression or Symfony alias (@daily, @hourly, every 5 minutes, etc.)</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                {{ form_label(form.timezone, 'Timezone', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.timezone, {'attr': {'class': 'form-select'}}) }}
                                {{ form_errors(form.timezone) }}
                                <div class="form-text">Task execution timezone</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label">&nbsp;</label>
                                <div class="form-check">
                                    {{ form_widget(form.workingDaysOnly, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(form.workingDaysOnly, 'Working Days Only', {'label_attr': {'class': 'form-check-label'}}) }}
                                </div>
                                {{ form_errors(form.workingDaysOnly) }}
                                <div class="form-text">Skip weekends and bank holidays</div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="mb-3">
                                {{ form_label(form.priority, 'Priority', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.priority, {'attr': {'class': 'form-control', 'min': 1, 'max': 100}}) }}
                                {{ form_errors(form.priority) }}
                                <div class="form-text">1-100 (lower = higher priority)</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label">&nbsp;</label>
                                <div class="form-check">
                                    {{ form_widget(form.active, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(form.active, 'Task is active', {'label_attr': {'class': 'form-check-label'}}) }}
                                </div>
                                {{ form_errors(form.active) }}
                                <div class="form-text">Inactive tasks won't be scheduled</div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.metadata, 'Task Metadata', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.metadata, {'attr': {'class': 'form-control', 'rows': 8, 'placeholder': '{\n  "recipients": ["user@example.com"],\n  "timespan": "last_7_days",\n  "format": "detailed"\n}'}}) }}
                        {{ form_errors(form.metadata) }}
                        <div class="form-text">JSON configuration for the task (recipients, settings, etc.)</div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <div>
                            <a href="{{ path('dynamic_task_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-save"></i>
                                {% if task.id %}Update Task{% else %}Create Task{% endif %}
                            </button>
                            {% if task.id %}
                            <a href="{{ path('dynamic_task_run', {id: task.id}) }}" class="btn btn-success me-2">
                                <i class="fas fa-play"></i> Test Run
                            </a>
                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                            {% endif %}
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% if task.id %}
<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the task <strong>"{{ task.name }}"</strong>?</p>
                <p class="text-danger">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a href="{{ path('dynamic_task_delete', {id: task.id}) }}" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete Task
                </a>
            </div>
        </div>
    </div>
</div>
{% endif %}

<style>
    .form-text {
        font-size: 0.8em;
        color: #6c757d;
    }
    
    .form-control-plaintext {
        font-size: 0.9em;
    }
    
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
</style>
{% endblock %}
